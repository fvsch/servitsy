{
	"name": "servitsy",
	"version": "0.1.2",
	"keywords": [
		"cli",
		"http",
		"http-server",
		"server",
		"static"
	],
	"homepage": "https://github.com/fvsch/servitsy",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fvsch/servitsy.git"
	},
	"author": {
		"name": "Florens Verschelde",
		"url": "https://www.npmjs.com/~fvsch"
	},
	"type": "module",
	"main": "./lib/index.js",
	"exports": {
		".": {
			"import": "./lib/index.js"
		}
	},
	"bin": {
		"servitsy": "bin/servitsy.js"
	},
	"files": [
		"./bin",
		"./lib",
		"./README.md"
	],
	"scripts": {
		"format": "prettier --write '**/*.{js,css}' '**/*config*.json'",
		"test": "node --test --test-reporter=spec",
		"typecheck": "tsc -p jsconfig.json && tsc -p test/jsconfig.json"
	},
	"devDependencies": {
		"@types/node": "^20.16.5",
		"linkedom": "^0.18.4",
		"prettier": "^3.3.3",
		"typescript": "~5.6.2"
	},
	"prettier": {
		"endOfLine": "lf",
		"printWidth": 100,
		"singleQuote": true,
		"useTabs": true
	}
}
