{
	"include": ["./src"],
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"types": ["node"],
		"outDir": "./lib",
		"strict": true,
		"allowImportingTsExtensions": true,
		"erasableSyntaxOnly": true,
		"isolatedModules": true,
		"removeComments": true,
		"rewriteRelativeImportExtensions": true,
		"verbatimModuleSyntax": true
	}
}
